@using Sequence.Utilities.SCLEditor.Components
@inherits LayoutComponentBase

<MudThemeProvider Theme='@Themes.CurrentTheme' />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
  <MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(_ => DrawerToggle())" />
    <MudText Typo="Typo.h5" Class="ml-3">Reductech Toolbox</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    <MudToggleIconButton ToggledChanged='DarkModeToggled'
                         ToggledIcon='@Icons.Material.Filled.DarkMode'
                         Icon='@Icons.Material.Filled.LightMode'
                         Color="Color.Inherit"
                         Edge="Edge.End" />
  </MudAppBar>
  <MudDrawer @bind-Open="@_drawerOpen">
    <NavMenu />
  </MudDrawer>
  <MudMainContent>
    @Body
  </MudMainContent>
</MudLayout>

@code {
  bool _drawerOpen = true;

  void DrawerToggle()
  {
    _drawerOpen = !_drawerOpen;
  }

  private void DarkModeToggled(bool value)
  {
    Themes.IsDarkMode.OnNext(value);
  }

}
